@import 'nib'

.menu
  list-style: none
  border-bottom: 0.1em solid black
  margin-bottom: 2em
  padding: 0 0 0.5em

.menu:before
  content: "["

.menu:after
  content: "]"

.menu > li
  display: inline

.menu > li:before
  content: "|"
  padding-right: 0.3em

.menu > li:nth-child(1):before
  content: ""
  padding: 0

.slider
  position: relative
  width: 100%
  display: block
  z-index: 0
  .bar
    z-index: 1
    position: absolute
    display: inline-block
    width: 100%
    height: 7px
    top: 25px
    background linear-gradient(top, lighten(gray, 50%), lighten(gray, 10%))
    box-shadow inset 2px 2px 5px
    border-radius 1em/1em

  .selection
    z-index: 2
    position: absolute
    display: inline-block
    height: 7px
    background linear-gradient(top, darken(#31BFFF, 10%), darken(#31BFFF, 20%))
    top: 25px
    &:hover
      background linear-gradient(top, darken(#31BFFF, 30%), darken(#31BFFF, 30%))

  .pointer-container
    z-index: 3
    position: absolute
    display: inline-block
    .pointer-label
      text-align: center
      position: relative
      white-space: nowrap
    .pointer
      display: inline-block
      width: 20px
      height: 20px
      border: 1px solid black
      border-radius: 20px/20px
      background: white
      .pointer-inner
        background-color: #808080
        width: 8px
        height: 8px
        position: relative
        top: 6px
        left: 6px
        border-radius: 8px/8px
      &:hover
        .pointer-inner
          background-color: black
